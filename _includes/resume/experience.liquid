<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign work = data[1] | sort: 'startDate' | reverse %}
  {% for content in work %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-12 col-sm-3 col-md-2 text-center date-column mb-2 mb-sm-0">
          {% if content.startDate %}
            {% if content.startDate %}
              {% assign start_parts = content.startDate | split: '-' %}
              {% assign startDate = start_parts[1] | append: '/' | append: start_parts[0] %}
            {% endif %}
            {% if content.endDate %}
              {% assign end_parts = content.endDate | split: '-' %}
              {% assign endDate = end_parts[1] | append: '/' | append: end_parts[0] %}
            {% else %}
              {% assign endDate = 'Present' %}
            {% endif %}
              {% assign date = startDate | append: ' - ' %}
            {% assign date = date | append: endDate %}
          {% else %}
            {% assign date = '' %}
          {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px"> {{ date }} </span>
                </td>
              </tr>
              {% if content.location %}
                <tr>
                  <td>
                    <p class="location">
                      <i class="fa-solid fa-location-dot iconlocation"></i>
                      {{ content.location }}
                    </p>
                  </td>
                </tr>
              {% endif %}
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {{ content.position }}
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem;"><i class="fa-solid fa-building-columns iconlocation"></i> {{ content.name }}</h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.summary }}</h6>
          <ul class="items">
            {% for item in content.highlights %}
              <li>
                <span class="item">{{ item }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
